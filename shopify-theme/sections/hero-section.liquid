{{ 'hero-section.css' | asset_url | stylesheet_tag }}

<section class="hero-section relative min-h-screen flex flex-col" data-testid="hero-section">
  <!-- Background Image -->
  <div 
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style="background-image: url('{{ section.settings.background_image | image_url: width: 1920 }}');"
  ></div>
  
  <!-- Content -->
  <div class="flex-1 relative z-10">
    <!-- Main content area - can be expanded with additional sections -->
  </div>
  
  <!-- Bottom Section with Logo on Lime Background -->
  <div class="relative z-10 bg-lime py-8 wavy-cloud-top">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-center">
        <div class="text-right text-black font-bold text-2xl md:text-3xl lg:text-4xl" style="flex-basis: 40%;">
          {{ section.settings.left_text | default: 'ALL-NATURAL INGREDIENTS' }}
        </div>
        <div class="flex-shrink-0 mx-8">
          {% if section.settings.logo_image %}
            <img 
              src="{{ section.settings.logo_image | image_url: width: 160 }}" 
              alt="{{ section.settings.logo_alt | default: 'Auntie\'s Logo' }}" 
              class="w-24 md:w-32 lg:w-40 h-auto"
              data-testid="img-auntie-logo-bottom"
            />
          {% endif %}
        </div>
        <div class="flex-1 text-left text-black font-bold text-2xl md:text-3xl lg:text-4xl">
          {{ section.settings.right_text | default: 'INDIAN INSPIRED' }}
        </div>
      </div>
      
      <!-- Free-From Carousel -->
      <div class="mt-8 overflow-hidden">
        <div class="free-from-carousel flex items-center gap-8">
          {% assign carousel_items = section.blocks | where: 'type', 'carousel_item' %}
          {% for item in carousel_items %}
            <div class="flex items-center gap-2 whitespace-nowrap">
              <div class="w-8 h-8 rounded-full border-2 border-black flex items-center justify-center">
                {% case item.settings.icon_type %}
                  {% when 'palm-oil' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                      <path d="M2 17l10 5 10-5"/>
                      <path d="M2 12l10 5 10-5"/>
                    </svg>
                  {% when 'natural' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2a3 3 0 0 0-3 3c0 2-5 13-5 13s18 0 16-13a3 3 0 0 0-3-3 3 3 0 0 0-3 3 3 3 0 0 0-3-3z"/>
                      <path d="M20 12c-1 0-3 1-3 3s2 3 3 3 3-1 3-3-2-3-3-3z"/>
                    </svg>
                  {% when 'no-nasty' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="15" y1="9" x2="9" y2="15"/>
                      <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                  {% when 'low-salt' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                      <line x1="16" y1="8" x2="2" y2="22"/>
                      <line x1="17.5" y1="15" x2="9" y2="15"/>
                    </svg>
                  {% when 'non-gmo' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M9 12l2 2 4-4"/>
                      <circle cx="12" cy="12" r="10"/>
                    </svg>
                  {% else %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="16,12 12,8 8,12"/>
                      <line x1="12" y1="16" x2="12" y2="8"/>
                    </svg>
                {% endcase %}
              </div>
              <span class="text-black font-medium">{{ item.settings.text }}</span>
            </div>
          {% endfor %}
          
          <!-- Duplicate items for seamless infinite scroll -->
          {% for item in carousel_items %}
            <div class="flex items-center gap-2 whitespace-nowrap">
              <div class="w-8 h-8 rounded-full border-2 border-black flex items-center justify-center">
                {% case item.settings.icon_type %}
                  {% when 'palm-oil' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2L2 7l10 5 10-5-10-5z"/>
                      <path d="M2 17l10 5 10-5"/>
                      <path d="M2 12l10 5 10-5"/>
                    </svg>
                  {% when 'natural' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M12 2a3 3 0 0 0-3 3c0 2-5 13-5 13s18 0 16-13a3 3 0 0 0-3-3 3 3 0 0 0-3 3 3 3 0 0 0-3-3z"/>
                      <path d="M20 12c-1 0-3 1-3 3s2 3 3 3 3-1 3-3-2-3-3-3z"/>
                    </svg>
                  {% when 'no-nasty' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <line x1="15" y1="9" x2="9" y2="15"/>
                      <line x1="9" y1="9" x2="15" y2="15"/>
                    </svg>
                  {% when 'low-salt' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M20.24 12.24a6 6 0 0 0-8.49-8.49L5 10.5V19h8.5z"/>
                      <line x1="16" y1="8" x2="2" y2="22"/>
                      <line x1="17.5" y1="15" x2="9" y2="15"/>
                    </svg>
                  {% when 'non-gmo' %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M9 12l2 2 4-4"/>
                      <circle cx="12" cy="12" r="10"/>
                    </svg>
                  {% else %}
                    <svg class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"/>
                      <polyline points="16,12 12,8 8,12"/>
                      <line x1="12" y1="16" x2="12" y2="8"/>
                    </svg>
                {% endcase %}
              </div>
              <span class="text-black font-medium">{{ item.settings.text }}</span>
            </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>

